<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/drawerPadding"
    android:layout_height="match_parent">

    <com.pkmmte.view.CircularImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/drawerProfileImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_account_circle_black"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="@dimen/drawerPadding"
        android:layout_marginStart="@dimen/drawerPadding"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/drawerProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/copyright"
        android:layout_marginTop="@dimen/drawerPadding"
        android:layout_below="@id/drawerProfileImage"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:textSize="16sp"/>

</RelativeLayout>
